<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sozunyi= "http://schemas.android.com/apk/res/com.sozunyi.xiaolimao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee" >
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay_top_order"
    android:orientation="vertical">
    <com.sozunyi.xiaolimao.view.TitleBarView
    android:id="@+id/tbv_adress_add"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    sozunyi:title="商家后台"
	    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/title_bg"
        android:orientation="vertical">
     <Button
            android:id="@+id/tv_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_back_gary"
            android:layout_centerHorizontal="true"
            android:text="等待支付"
            android:textColor="@color/chengse"
            android:textSize="30sp" />
    
	</RelativeLayout>
	</LinearLayout>
	
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/lay_top_order"
    android:layout_above="@+id/lay_bottom_order"
    android:orientation="vertical"
    android:background="#eeeeee" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="#fff" >
        <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <Button 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
    		android:layout_marginTop="3dp"
    		android:id="@+id/btn_order_shop"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:textSize="25sp"
    		android:text="李家卤菜馆"
            />
        <ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@id/btn_order_shop"
    		android:layout_centerVertical="true"
    		android:background="@drawable/arrow_right"
    		android:layout_marginLeft="5dp"
            />
        
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>
    	
        <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_margin="10dp"
		    android:background="#fff" >
        
        </LinearLayout>
        
        <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentTop="true"
            /> 
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="50dp"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="配送费"
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginRight="30dp"
    		android:layout_centerVertical="true"
    		android:layout_alignParentRight="true"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="￥5"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>   
    	<RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
       
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:id="@+id/tv_total"
    		android:layout_marginLeft="3dp"
    		android:layout_marginRight="30dp"
    		android:layout_centerVertical="true"
    		android:layout_alignParentRight="true"
    		android:gravity="center"
    		android:textColor="@color/chengse"
    		android:textSize="22sp"
    		android:textStyle="bold"
    		android:text="259.00"
            />
          <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_toLeftOf="@id/tv_total"
    		android:textColor="@color/chengse"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="合计：￥"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>     
    </LinearLayout>
    
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="#fff" >
    	
      <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_num"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="订单编号："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_num"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="2016040118371101"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>   
    	<RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_time"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="下单时间："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_time"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="2016-04-01 18:37:11"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>
    	
    	<RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_lianxir"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="联系人："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_lianxir"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="陈昌政"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>
    	
    	<RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_shouji"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="手机号："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_shouji"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="18798125204"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>
    	
    	<RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_dizhi"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="地址："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_dizhi"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="汇川区 宁波路 咖啡豆酒店2楼202"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>
    	
       <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:id="@+id/tv_order_beizhu"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="备注："
            />
         <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="3dp"
    		android:layout_toRightOf="@id/tv_order_beizhu"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:text="多放点辣椒，多拿双筷子"
            />
        <View 
	        android:layout_width="match_parent"
	    	android:layout_height="0.2dp" 
	    	android:background="#dddddd"
	    	android:layout_alignParentBottom="true"
            /> 
    	</RelativeLayout>

       </LinearLayout>
    </LinearLayout>
    
   <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:layout_alignParentBottom="true"
    	android:id="@id/lay_bottom_order"
    	android:background="#fff"
        >
    	 <Button 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
    		android:layout_marginLeft="20dp"
    		android:id="@+id/btn_order_delete"
    		android:drawableLeft="@drawable/delete_order"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:textSize="15sp"
    		android:text=" 删除订单"
            />
    	 
    	 <Button 
            android:layout_width="90dp"
    		android:layout_height="40dp"
    		android:layout_marginRight="20dp"
    		android:id="@+id/btn_order_pay"
    		android:layout_centerVertical="true"
    		android:layout_alignParentRight="true"
    		android:background="@drawable/payment"
    		android:gravity="center"
    		android:textSize="16sp"
    		android:textStyle="bold"
    		android:textColor="@color/chengse"
    		android:text="去支付"
            />

        </RelativeLayout>

</RelativeLayout>